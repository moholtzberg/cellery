<div class="col-md-6 col-md-offset-3" id="forgot-password">
	
	<div class="panel panel-default">
		
		<div class="panel-heading">
			<h3 class="panel-title"><%= I18n.t(:forgot_password) %></h3>
		</div>
		<div class="panel-body">
			
			<% if resource.errors.full_messages.any? %>
			<div class="alert alert-danger" role="alert">
				<ul class="list-unstyled">
				<% resource.errors.each do |k,v| %>
					<li><strong><%= k.capitalize %></strong> - <%= v.capitalize %></li>
				<% end %>
				</ul>
			</div>
			<% end %>
			
			<%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :post }) do |f| %>
			<p>
			<%= f.label :email, I18n.t(:email) %><br />
			<%= f.email_field :email, :class => "form-control" %>
			</p>
			<p>
			<%= f.submit I18n.t(:reset_password), :class => 'btn btn-lg btn-success btn-block' %>
			</p>
			<% end %>
		</div>
	</div>
</div>