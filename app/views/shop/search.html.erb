<% content_for :title do %>Search Results: <%= params[:keywords] %><% end %>

<div class="page-header">
	<h1>Search Results: <%= params[:keywords] %></h1>
</div>

<% unless @items.nil? %>
	<% @items.each_hit_with_result do |hit, item| %>
		<%= render :partial => "item", :locals => {:i => item, :hit => hit} %>
	<% end %>
<% else %>
<p>Sorry, No items were found!</p>
<% end %>	  

<%= will_paginate @items.hits, renderer: BootstrapPagination::Rails %>