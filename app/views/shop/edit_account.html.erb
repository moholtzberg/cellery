<% @body_id = 'signup' %>
<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><%= I18n.t(:update_account) %></h3>
		</div>
		<div id="edit-account" class="panel-body">
			<%= form_for @account, :url => user_registration_path do |f| %>
			<div data-hook="signup_inside_form">
				<fieldset>

					<div id="address" class="col-md-12 shipping">
						<%= f.label :company_name, :class => "control-label" %>
						<%= f.text_field :name, :class => "form-control" %>
					</div>

					<div id="address" class="col-md-12 shipping">
						<%= f.label :address, :class => "control-label" %>
						<%= f.text_field :address_1, :class => "form-control" %>
					</div>

					<div id="address_2" class="col-md-12 shipping">
						<%= f.label :address_2, :class => "control-label" %>
						<%= f.text_field :address_2, :class => "form-control" %>
					</div>

					<div id="city" class="col-sm-6 col-xs-6 shipping">
						<%= f.label :city, :class => "control-label" %>
						<%= f.text_field :city, :class => "form-control" %>
					</div>

					<div id="state" class="col-sm-2 col-xs-3 shipping">
						<%= f.label :state, :class => "control-label" %>
						<%= f.text_field :state, :class => "form-control" %>
					</div>

					<div id="zip" class="col-sm-4 col-xs-3 shipping">
						<%= f.label :zip, :class => "control-label" %>
						<%= f.text_field :zip, :class => "form-control" %>
					</div>

					<div id="phone" class="col-xs-12 shipping">
						<%= f.label :phone, :class => "control-label" %>
						<%= f.text_field :phone, :class => "form-control" %>
					</div>
					
					<div id="submit" class="col-xs-12 shipping">
						<%= f.submit I18n.t(:create), :class => 'btn btn-lg btn-success btn-block' %>
					</div>
					
				</fieldset>
				
			</div>
			<% end %>
		</div>
	</div>
</div>